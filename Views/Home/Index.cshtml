@{
    Layout = "_ownLayout";
}
@model List<Product>
<title>@ViewBag.Title</title>
<main>
    <div id="carouselExampleInterval" class="carousel slide " data-bs-ride="carousel">
        <div class="carousel-inner   mt-2">
            <div class="carousel-item active" data-bs-interval="2000">
                <img src="~/OtherImages/1_1512x.png" class=" pics d-block  w-100" alt="...">
            </div>
            <div class="carousel-item" data-bs-interval="2000">
                <img src="~/OtherImages/2_1080x.png" class="pics d-block w-100" alt="...">
            </div>
            <div class="carousel-item" data-bs-interval="2000">
                <img src="~/OtherImages/desk_sized_1512x_3cdea34d-4f8c-4e58-af4d-07a6dc894a28_1512x.jpg"
                     class=" pics d-block w-100" alt="...">
            </div>
        </div>
    </div>


    <div class="fs-1  fw-bold text-center mt-5">----Smart Watches----</div>
    <div class="text-body-tertiary text-center fs-4">Top Selling Watches in this Week</div>


    <div class="container">
        <div class="row gy-3 mt-5 ">
            @{
                IEnumerable<Product> p1 = Model.Take(4);
                List<Product> productList1 = p1.ToList();
            }
            <partial name="_mypartialview" model="productList1" />
        </div>
        <div class="container">
            <div class="row justify-content-center mt-4">
                <div class="col-md-4 text-center">
                    <a href="/SmartWatches/index">
                        <button type="button" class="btn btn-dark p-3 rounded-pill fs-5">
                            View More
                            ->
                        </button>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="fs-1  fw-bold text-center mt-5">Dive into Wireless Freedom with AirPods!</div>
    <div class="text-body-tertiary fs-5 text-center">
        Experience music like never before with AirPods,<br> where
        immersive sound meets effortless connectivity.<br> Whether you're on the go or winding down, these wireless
        wonders<br> deliver a seamless audio experience that moves with you.
    </div>
    <div class="fs-1  fw-bold text-center mt-5">----Trending AirPods----</div>
    <div class="text-body-tertiary text-center fs-4">Top Selling in this Week</div>
    @{
        var lastFourItems = Model.TakeLast(4);
        List<Product> productList2 = lastFourItems.ToList();

    }

    <div class="container">
        <div class="row gy-3 mt-5 ">
            <partial name="_mypartialview" model="productList2" />
           
           
        </div>

        <div class="container mb-2">
            <div class="row justify-content-center ">
                <div class="col-md-4 text-center">
                    <a href="/Airpods/index">
                        <button type="button" class="btn btn-dark p-3 rounded-pill fs-5">
                            View More
                            ->
                        </button>
                    </a>
                </div>
            </div>
        </div>
    </div>
</main>

<div class="container mt-5">
    <div class="row  mb-5">
        <div class="col-6 col-sm-6 col-md-3">
            <img src="~/OtherImages/freedel.png" height="100px">
            <h5>Free Shipping</h5>
            <p class="fs-6 text-body-tertiary">Free Shipping on All Order</p>
        </div>
        <div class="col-6 col-sm-6 col-md-3">
            <img src="~/OtherImages/secure.png" height="100px" alt="">
            <h5>SUPPORT 24/7</h5>
            <p class="fs-6 text-body-tertiary">Contact us 24 hours a day, 7 days a week</p>
        </div>
        <div class="col-6 col-sm-6 col-md-3">
            <img src="~/OtherImages/return.jpg" height="100px" alt="">
            <h5>7 DAYS RETURN</h5>
            <p class="fs-6 text-body-tertiary">Simply return it within 7 days for an exchange.</p>
        </div>
        <div class="col-6 col-sm-6 col-md-3">
            <img src="~/OtherImages/secure.png" height="100px" alt="">
            <h5>100% PAYMENT SECURE</h5>
            <p class="fs-6 text-body-tertiary">We ensure secure payment</p>
        </div>
    </div>
</div>